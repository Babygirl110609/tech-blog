<section class="new-post-section">
    <form class="form -new-post-form">
      <div class="form-group">
        <label for="title-new-post">title:</label>
        <input class="form-input" type="text" id="title-"/>
      </div>
      <div class="form-group">
        <label for="contentl">content:</label>
        <input class="form-input" type="text" id="content"/>
      </div>
     
   
    </form>
    <button type="submit" class="btn" id="create-new-post">+ Create new post</button>
</section>


{{#if posts.length}}
<section>
    <h2>Your Dashboard</h2>
    <ul class="post-list">
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">edit post</a>
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}

<script src="/javascript/create-post.js"></script>